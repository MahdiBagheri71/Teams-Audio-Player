{
  "name": "teams-audio-player",
  "version": "1.0.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@azure/msal-browser": "^3.5.0",
    "@azure/msal-react": "^2.0.5",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:prod": "npm run build && npm run optimize",
    "optimize": "npx workbox-cli generateSW",
    "serve": "npx serve -s build -l 3000",
    "analyze": "npx source-map-explorer 'build/static/js/*.js'",
    "lint": "npx eslint src --ext .js,.jsx",
    "lint:fix": "npx eslint src --ext .js,.jsx --fix",
    "format": "npx prettier --write src/**/*.{js,jsx,css,json}",
    "type-check": "npx tsc --noEmit",
    "pre-commit": "npm run lint && npm run format && npm run test -- --watchAll=false"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.25.0",
    "prettier": "^2.7.1"
  }
}
